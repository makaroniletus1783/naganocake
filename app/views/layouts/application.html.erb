<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/ea4c56ad7f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>
  <% if admin_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/admin/homes/top">
            <spam>ロゴ</spam>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
          </button>
          <div class="bar">
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <li><%= link_to " 商品一覧", admin_items_path, class:"fas fa-shopping-bag nav-link text-light" %></li>
             <li><%= link_to " 会員一覧", admin_customers_path, class:"fas fa-users nav-link text-light" %></li>
             <li><%= link_to " 注文履歴一覧", admin_orders_path, class:"fas fa-clipboard-list nav-link text-light" %></li>
             <li><%= link_to " ジャンル一覧", admin_genres_path, class:"fas fa-dice-d6 nav-link text-light" %></li>
             <li><%= link_to ' logout', destroy_admin_session_path, method: :delete,  class:"fas fa-sign-out-alt nav-link text-light" %></li>
            </ul>
          </div>
            <ul class="navbar-nav ml-auto d-none d-md-block">
              <li>
                <%= form_with url: admin_search_path, method: :get, local: true, class:"d-flex" do |f| %>
                 　　<%= f.text_field :keyword, value: @keyword, class:"form-control me-2", placeholder:"Search" %>
                 　　<%= f.submit "検索", class:"btn btn-outline-success" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    </header>

  <% elsif customer_signed_in? %>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <spam>ロゴ</spam>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <li><%= link_to ' マイページ', customers_my_page_path, class:'fas fa-home nav-link text-light' %></li>
             <li><%= link_to ' 商品一覧', items_path, class:'fas fa-shopping-bag nav-link text-light' %></li>
             <li><%= link_to ' カート', cart_items_path, class:'fas fa-shopping-cart nav-link text-light' %></li>
             <li><%= link_to ' logout', destroy_customer_session_path, method: :delete,  class:"fas fa-sign-out-alt nav-link text-light" %></li>
          </ul>
          </div>
        </div>
      </nav>

    </header>

    <% else %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <spam>LOGO</spam>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
             <li><%= link_to ' Home', root_path, class:'fas fa-home nav-link text-light' %></li>
             <li><%= link_to ' About', about_path, class:'fas fa-link nav-link text-light' %></li>
             <li><%= link_to ' sign up', new_customer_registration_path, class:'fas fa-user-plus nav-link text-light' %></li>
             <li><%= link_to ' login', new_customer_session_path, class:'fas fa-sign-in-alt nav-link text-light' %></li>
            </ul>
          </div>
        </div>
      </nav>

    </header>
  <% end %>
  <%= yield %>
  </body>
</html>
