<div class="container">
    <div class="row">
      <div class="col-12 px-5 px-sm-0">
<p id="notice"><%= notice %></p>
<h2><span class="badge">新規会員登録</span></h2>
<p id="notice"></p>
<p id="notice"></p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
   <div class="col-3">
    <p>名前</p>
   </div>
   <div class="col-1">
    <p>（姓）</p>
   </div>
   <div class="col-3">
    <div class="field">
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>
   </div>
   <div class="col-1">
    <p>（名）</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :last_name %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-3">
    <p>フリガナ</p>
   </div>
   <div class="col-1">
    <p>（セイ）</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :first_name_kana %>
    </div>
   </div>
   <div class="col-1">
    <p>（メイ）</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :last_name_kana %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-4">
    <p>メールアドレス</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.email_field :email %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-4">
    <p>郵便番号（ハイフンなし）</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :postal_code %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-4">
    <p>住所</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :address %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-4">
    <p>電話番号（ハイフンなし）</p>
   </div>
   <div class="col-3">
    <div class="field">
     <%= f.text_field :telephone_number %>
    </div>
   </div>
  </div>

  <div class="row">
   <div class="col-4">
    <p>パスワード（6文字以上）</p>
   </div>
   <div class="col-3">
    <div class="field">
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
   </div>
  </div>

<div class="row">
   <div class="col-4">
    <p>パスワード（確認用）</p>
   </div>
   <div class="col-3">
    <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
   </div>
  </div>


  <div class="row">
   <div class="col-4"></div>
   <div class="col-3">
    <div class="form-group"><br />
    <%= f.submit "新規登録", class:"btn btn-success" %><br />
    </div>
   </div>
  </div>

  <h2><span class="badge ">既にログイン済みの方</span></h2>
  <p>　　<%= link_to 'こちら', new_customer_session_path %> からログインしてください</p>



<% end %>
</div>
</div>
</div>