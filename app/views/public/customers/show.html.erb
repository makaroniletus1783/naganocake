<div class="mx-auto" style="width: 80%;">
    <p id="notice"><%= notice %></p>
    <div class="container">
        <div class ="row">
            <h2><span class="badge">マイページ</span></h2>
        </div>
        <div class = "row">
            <div class = "col-2">
                <h3><span class="badge">登録情報</span></h3>
            </div>
            <div class = "col-2">
                <%= link_to '編集する', edit_customers_path, class:"btn btn-success" %>
            </div>
        </div>
        <div class = "row">
            <div class = "col-6">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td>氏名</td>
                            <td> <%= @customer.first_name %>　<%= @customer.last_name %></td>
                        </tr>
                        <tr>
                            <td>カナ</td>
                            <td><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></td>
                        </tr>
                        <tr>
                            <td>郵便番号</td>
                            <td><%=@customer.postal_code%></td>
                        </tr>
                        <tr>
                            <td>住所</td>
                            <td><%=@customer.address%></td>
                        </tr>
                        <tr>
                            <td>電話番号</td>
                            <td><%=@customer.telephone_number%></td>
                        </tr>
                        <tr>
                            <td>メールアドレス</td>
                            <td><%=@customer.email%></td>
                        </tr>
                    </tbody>
               </table>
            </div>
        </div>
        <div class="row">　</div>
        <div class="row">
            <div class="col-2">
                <h3><span class="badge">配送先</span></h3>
            </div>
            <div class="col-6">
                <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
            </div>
        </div>
    </div>
</div>