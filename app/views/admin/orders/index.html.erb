<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"></p>
      <h2><span class="badge">注文履歴一覧</span></h2>
      <p id="notice"></p>
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to admin_order_path(order) do%>
                    <%= l order.created_at %>
                  <% end %>
              </td>
              <td><%= order.customer.first_name %><%= order.customer.last_name %></td>
              <% @sum = 0 %>
              <% order.order_details.each do |order_detail| %>
               <% @sum += order_detail.amount %>
              <% end %>
              <td><%= @sum %></td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>