<div class="container">
  <div class="row">
    <div class="col">
      <p id="notice"></p>
      <div class="row">
        <div class="col-10">
          <h2><span class="badge">商品一覧</span></h2>
        </div>
        <div class="col-2">
          <%= link_to '追加', new_admin_item_path, class:"btn btn-success" %>
        </div>
      </div>
      <p id="notice"></p>
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %>円</td>
              <td><%= item.genre.name %></td>
              <% if item.is_available %>
                <td class="state">販売中</td>
              <% else %>
                <td>販売停止中</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>